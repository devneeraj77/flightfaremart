{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "php-8.2"
      }
    },
    {
      "src": "resources/css/**/*.css",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    },
    {
      "src": "resources/js/**/*.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.php"
    }
  ],
  "installCommand": "composer install --no-dev --optimize-autoloader && npm install",
  "buildCommand": "npm run build",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false"
  }
}
